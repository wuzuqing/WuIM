<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="4dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/im_item_chat_time"
        style="@style/IMChatTime" />

    <ImageView
        android:id="@+id/im_item_chat_avatar"
        style="@style/IMChatAvatar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/im_item_chat_avatar"
        android:layout_marginEnd="52dp"
        android:layout_toRightOf="@+id/im_item_chat_avatar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/im_item_chat_nick"
            style="@style/IMChatNick" />

        <TextView
            android:id="@+id/im_item_chat_content"
            style="@style/IMChatContent"
            android:background="@drawable/im_item_chat_to_bg"
            />
    </LinearLayout>
</RelativeLayout>