<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/im_preview_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/im_act_preview_content"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/im_recycler_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/im_preview_top_container"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/album_preview_top_bg"
            android:visibility="gone">

            <ImageView
                android:id="@+id/im_preview_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="12dp"
                android:src="@mipmap/ic_delete_white" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/im_preview_bottom_container"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_gravity="bottom"
            android:background="@drawable/album_preview_bottom_bg"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/im_preview_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:src="@drawable/album_selector_play" />

            <com.wuzuqing.component_base.widget.ProgressTextView
                android:id="@+id/im_progress_view"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="12dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/im_preview_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/grey70"
            android:padding="4dp"
            android:src="@mipmap/ic_nva" />

        <ImageView
            android:id="@+id/im_preview_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:background="@color/grey70"
            android:padding="4dp"
            android:src="@mipmap/ic_down" />


    </FrameLayout>

</FrameLayout>