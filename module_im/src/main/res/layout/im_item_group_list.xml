<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="12dp"
    android:paddingStart="12dp">

    <ImageView
        android:id="@+id/im_item_list_img"
        android:layout_width="@dimen/im_chat_img_size"
        android:layout_height="@dimen/im_chat_img_size"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/im_item_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/im_item_list_img"
        app:layout_constraintLeft_toRightOf="@+id/im_item_list_img"
        app:layout_constraintTop_toTopOf="@+id/im_item_list_img" />

    <View
        style="@style/HorizontalLineStyle"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/im_item_list_img"
        app:layout_constraintTop_toBottomOf="@+id/im_item_list_img" />
</android.support.constraint.ConstraintLayout>